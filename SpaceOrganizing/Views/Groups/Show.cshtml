                            <p>
                                Descriere grup: @ViewBag.Group.GroupDescription
                            </p>
                        }
                        else if (ViewBag.isGroupOwner)
                        {
                            <p>
                                <a class="glyphicon glyphicon-edit" href="/Groups/Edit/@ViewBag.Group.GroupId"> Adauga descriere</a>
                            </p>
                            <br /><br />}
                    </li>

                </ul>

            </div>
        </div>
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-header card-header-warning card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">content_copy</i>
                        </div>
                        <br />
                        <br />
                        @using (Html.BeginForm(actionName: "New", controllerName: "Taskss"))
                        {
                            @Html.Hidden("GroupId")

                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                            <input type="hidden" name="GroupId" value="@ViewBag.Group.GroupId" />
                            @Html.Label("Title", "Titlu Task")

                            @Html.TextBox("Title", null, new { @class = "form-control" })

                            @Html.ValidationMessage("Title", null, new { @class = "text-danger" })

                            @Html.Label("Descriprtion", "Continut task")

                            @Html.TextArea("Description", null, new { @class = "form-control" })

                            @Html.ValidationMessage("Description", null, new { @class = "text-danger" })

                            @Html.Label("Deadline", "Deadline")

                            @Html.TextArea("Deadline", null, new { @class = "form-control" })

                            @Html.Label("UserId2", "Asignat")

                            @Html.DropDownList("UserId2", new SelectList(ViewBag.UsersList, "Value", "Text"), "Selectati utilizator", new { @class = "form-control" })

                            <button class="btn btn-success " style="background-color: #9c27b0;" type="submit">
                                Adauga
                                task
                            </button>}



                        <p class="card-category"></p>
                        <h3 class="card-title">

                            <small></small>
                        </h3>
                    </div>
                    <div class="card-footer">
                        <table class="table">
                            <tbody>
                                <tr>

                                    <div class="form-check">
                                        <td>
                                            <label for="urgent">

                                                <input class="form-check-input" type="checkbox" id="urgent" name="Urgent" value="Urgent">
                                                <span class="form-check-sign">
                                                    <span class="check"></span>
                                                </span>
                                                Urgent
                                            </label>
                                        </td>
                                        <td>
                                            <label for="medium">

                                                <input class="form-check-input" type="checkbox" id="medium" name="Medium" value="Medium">
                                                <span class="form-check-sign">
                                                    <span class="check"></span>
                                                </span>
                                                Medium
                                            </label>
                                        </td>
                                        <td>
                                            <label for="low">

                                                <input class="form-check-input" type="checkbox" id="low" name="Low" value="Low">
                                                <span class="form-check-sign">
                                                    <span class="check"></span>
                                                </span>
                                                Low
                                            </label>
                                        </td>


                                        <div class="stats">
                                            <i class="material-icons text-danger">warning</i>
                                            <a href="javascript:;">Set priority</a>
                                        </div>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-header card-header-danger card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">info_outline</i>
                        </div>
                        <p class="card-category">Solved Tasks</p>
                        <h3 class="card-title">@ViewBag.countDone</h3>
                    </div>
                    <div class="card-footer">
                        <div class="stats">
                            <i class="material-icons">local_offer</i> Tracked
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-header card-header-info card-header-icon">
                        <div class="card-icon">
                            <i class="fa fa-users"></i>
                        </div>
                        <p class="card-category">Members</p>
                        <h3 class="card-title">@ViewBag.UsersCount</h3>
                    </div>
                    <div class="card-footer">
                        <div class="stats">
                            <i class="material-icons">update</i> Grup creat de @ViewBag.Group.User.UserName
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="card card-chart">
                    <div class="card-header card-header-success">
                        <div class="ct-chart" id="dailySalesChart"></div>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">Total tasks</h4>
                        <p class="card-category">
                            <span class="text-success"><i class="fa fa-long-arrow-up"></i> </span>
                        </p>
                    </div>
                    <div class="card-footer">
                        <div class="stats">
                            <i class="material-icons">access_time</i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-chart">
                    <div class="card-header card-header-warning">
                        <div class="ct-chart" id="websiteViewsChart"></div>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">Total groups</h4>
                        <p class="card-category"></p>
                    </div>
                    <div class="card-footer">
                        <div class="stats">
                            <i class="material-icons">access_time</i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-chart">
                    <div class="card-header card-header-danger">
                        <div class="ct-chart" id="completedTasksChart"></div>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">Completed Tasks</h4>
                        @if (ViewBag.UsersCount != 0)
                        {
                            foreach (var task in ViewBag.Group.Tasks)
                            {
                                var id = task.TaskId;
                                if (task.Done == true)
                                {
                                    <p class="card-category">@task.Title</p>
                                }
                            }
                        }
                    </div>
                    <div class="card-footer">
                        <div class="stats">
                            <i class="material-icons">access_time</i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-12">
                <div class="card">
                    <div class="card-header card-header-tabs card-header-primary">
                        <div class="nav-tabs-navigation">
                            <div class="nav-tabs-wrapper">
                                <span class="nav-tabs-title">Mark as done:</span>
                                <ul class="nav nav-tabs" data-tabs="tabs">
                                    <li class="nav-item">
                                        <a class="nav-link active" href="#profile" data-toggle="tab">
                                            <i class="fa fa-exclamation-triangle" aria-hidden="true" style="color:crimson"></i> High
                                            <div class="ripple-container"></div>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#messages" data-toggle="tab">
                                            <i class="fa fa-tasks " aria-hidden="true" style="color:coral"></i> Medium
                                            <div class="ripple-container"></div>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#settings" data-toggle="tab">
                                            <i class="fa fa-tasks " aria-hidden="true" style="color:aquamarine"></i> Low
                                            <div class="ripple-container"></div>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="tab-pane active" id="profile">
                                <table class="table">
                                    <tbody>
                                        @if (ViewBag.UsersCount != 0)
                                        {
                                            foreach (var task in ViewBag.Group.Tasks)
                                            {
                                                var id = task.TaskId;
                                                if (task.Priority == "Urgent" && task.Done == false)
                                                {

                                                    <tr>
                                                        <td>
                                                            <div class="form-check">
                                                                <label class="form-check-label">

                                                                    <input class="form-check-input" type="checkbox" id="edTask" value="" onclick="doneTask()">
                                                                    <span class="form-check-sign">
                                                                        <span class="check"></span>
                                                                    </span>
                                                                    <script>
                                                                        function doneTask() {
                                                                            var checkbox = document.getElementById('edTask');
                                                                            if (checkbox.checked != true) {
                                                                                task.Done = false;
                                                                            }
                                                                            else {
                                                                                task.Done = true;
                                                                                post("TasksController/MarkAsDone/" + task.TaskId);
                                                                            }
                                                                        }
                                                                    </script>
                                                                </label>
                                                            </div>
                                                        </td>
                                                        <td>@task.Description</td>
                                                        <td class="td-actions text-right">

                                                            @if (task.UserId == ViewBag.UserId || ViewBag.isAdmin)
                                                            {
                                                                <a href="/Taskss/Edit/@task.TaskId" type="button" title="Edit Task" class="btn btn-primary btn-link btn-sm">
                                                                    <i class="material-icons">edit</i>
                                                                </a>
                                                                <a class="btn btn-primary btn-link btn-sm" type="button" href="/Taskss/Show/@task.TaskId">
                                                                    <i class="fa fa-eye"></i>
                                                                </a>
                                                            }
                                                            @if (ViewBag.isGroupOwner || task.UserId == ViewBag.UserId || ViewBag.isAdmin)
                                                            {

                                                                <form method="post" action="/Taskss/Delete/@task.TaskId">
                                                                    @Html.HttpMethodOverride(HttpVerbs.Delete)
                                                                    <button type="button" rel="submit" title="Remove" class="btn btn-danger btn-link btn-sm">
                                                                        <i class="material-icons">close</i>
                                                                    </button>
                                                                </form>

                                                            }
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="tab-pane" id="messages">
                                <table class="table">
                                    <tbody>
                                        @if (ViewBag.UsersCount != 0)
                                        {
                                            foreach (var task in ViewBag.Group.Tasks)
                                            {
                                                if (task.Priority == "Medium" && task.Done == false)
                                                {

                                                    <tr>
                                                        <td>
                                                            <div class="form-check">
                                                                <label class="form-check-label">
                                                                    <input class="form-check-input" type="checkbox" value="" checked>
                                                                    <span class="form-check-sign">
                                                                        <span class="check"></span>
                                                                    </span>
                                                                </label>
                                                            </div>
                                                        </td>
                                                        <td>@task.Description</td>
                                                        <td class="td-actions text-right">
                                                            @if (task.UserId == ViewBag.UserId || ViewBag.isAdmin)
                                                            {
                                                                <a href="/Taskss/Edit/@task.TaskId" type="button" title="Edit Task" class="btn btn-primary btn-link btn-sm">
                                                                    <i class="material-icons">edit</i>
                                                                </a>
                                                                <a class="btn btn-primary btn-link btn-sm" type="button" href="/Taskss/Show/@task.TaskId">
                                                                    <i class="fa fa-eye"></i>
                                                                </a>
                                                            }
                                                            @if (ViewBag.isGroupOwner || task.UserId == ViewBag.UserId || ViewBag.isAdmin)
                                                            {

                                                                <form method="post" action="/Taskss/Delete/@task.TaskId">
                                                                    @Html.HttpMethodOverride(HttpVerbs.Delete)
                                                                    <button type="button" rel="submit" title="Remove" class="btn btn-danger btn-link btn-sm">
                                                                        <i class="material-icons">close</i>
                                                                    </button>
                                                                </form>

                                                            }
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="tab-pane" id="settings">
                                <table class="table">
                                    <tbody>
                                        @if (ViewBag.UsersCount != 0)
                                        {
                                            foreach (var task in ViewBag.Group.Tasks)
                                            {
                                                if (task.Priority == "Low" && task.Done == false)
                                                {

                                                    <tr>
                                                        <td>
                                                            <div class="form-check">
                                                                <label class="form-check-label">
                                                                    <input class="form-check-input" type="checkbox" value="" checked>
                                                                    <span class="form-check-sign">
                                                                        <span class="check"></span>
                                                                    </span>
                                                                </label>
                                                            </div>
                                                        </td>
                                                        <td>@task.Description</td>
                                                        <td class="td-actions text-right">

                                                            @if (task.UserId == ViewBag.UserId || ViewBag.isAdmin)
                                                            {
                                                                <a href="/Taskss/Edit/@task.TaskId" type="button" title="Edit Task" class="btn btn-primary btn-link btn-sm">
                                                                    <i class="material-icons">edit</i>
                                                                </a>
                                                                <a class="btn btn-primary btn-link btn-sm" type="button" href="/Taskss/Show/@task.TaskId">
                                                                    <i class="fa fa-eye"></i>
                                                                </a>
                                                            }
                                                            @if (ViewBag.isGroupOwner || task.UserId == ViewBag.UserId || ViewBag.isAdmin)
                                                            {

                                                                <form method="post" action="/Taskss/Delete/@task.TaskId">
                                                                    @Html.HttpMethodOverride(HttpVerbs.Delete)
                                                                    <button type="button" rel="submit" title="Remove" class="btn btn-danger btn-link btn-sm">
                                                                        <i class="material-icons">close</i>
                                                                    </button>
                                                                </form>

                                                            }

                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="card">
                    <div class="card-header card-header-warning">
                        <h4 class="card-title">Unfinished Tasks</h4>
                        <p class="card-category"></p>
                    </div>
                    <div class="card-body table-responsive">
                        <table class="table table-hover">
                            <thead class="text-warning">
                            <th>ID</th>
                            <th>Title</th>
                            <th>Assigned by</th>
                            <th>Deadline</th>
                            <th>Assigned to</th>
                            </thead>
                            <tbody>
                                @if (ViewBag.UsersCount != 0)
                                {
                                    var counter = 0;
                                    foreach (var task in ViewBag.Group.Tasks)
                                    {
                                        counter += 1;

                                        if (task.Done == false)
                                        {
                                <tr>
                                    <td>@counter</td>
                                    <td>@task.Title</td>
                                    <td>@task.User.UserName</td>
                                    <td>@task.Deadline</td>
                                    @if (task.UserId2 != null)
                                    {
                                        <td>@task.User2.UserName</td>
                                    }
                                </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    if(ViewBag.Accepted!=null)
    {
        <a class="btn btn-info" href="/Groups/GroupNotification/@ViewBag.Group.GroupId">Inscrie-te in grup</a>
